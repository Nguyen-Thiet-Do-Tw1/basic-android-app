<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout3"
        android:layout_width="401dp"
        android:layout_height="69dp"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/iconn"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tenloaii"
            android:layout_width="157dp"
            android:layout_height="26dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="2dp"
            android:text="TextView"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@+id/iconn"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tongtienloai"
            android:layout_width="158dp"
            android:layout_height="27dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="1dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iconn"
            app:layout_constraintTop_toBottomOf="@+id/tenloaii" />

        <TextView
            android:id="@+id/phantram"
            android:layout_width="72dp"
            android:layout_height="32dp"
            android:layout_marginStart="50dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tenloaii"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.489" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>